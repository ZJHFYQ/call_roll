<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_txt_back"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:text="back"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:onClick="btn_txt_back_click"
            />

        <TextView
            android:id="@+id/title_call_role"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="50dp"
            android:text="@string/title_call_role"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/btn_txt_post"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/post"
            android:textSize="25dp"
            android:layout_toRightOf="@id/title_call_role"
            android:clickable="true"
            android:onClick="btn_txt_post_click"
            />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_class"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true">
    </Spinner>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">
    </ListView>

</LinearLayout>