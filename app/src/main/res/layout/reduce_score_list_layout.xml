<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="减分规则"
            android:gravity="center"
            android:textSize="25dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="逃课一次减分数目"/>
            <Spinner
                android:id="@+id/spinner_skip"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center">
            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="早退一次减分数目"/>
            <Spinner
                android:id="@+id/spinner_early"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center">
            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="迟到一次减分数目"/>
            <Spinner
                android:id="@+id/spinner_late"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center">
            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="请假一次减分数目"/>
            <Spinner
                android:id="@+id/spinner_off"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center">
            </Spinner>
            <Button
                android:id="@+id/btn_save_reduce"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="保存设置"
                android:onClick="btn_save_reduce_clicked"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>