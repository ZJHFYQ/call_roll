<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zjh.call_roll">
    <uses-permission android:name="WRITE_MEDIA_STORAGE">
    </uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE">
    </uses-permission>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS">
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE">
    </uses-permission>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/xiaozhushou"
        android:label="@string/title_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!--配置点名页面Activity-->
        <activity android:name=".call_rollActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--配置添加页面Activity-->
        <activity android:name=".addStudentActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".detail_Activity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".list_all_Activity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".reduce_score_Activity"
        android:screenOrientation="portrait">
        </activity>

        <activity android:name=".class_set_Activity"
            android:screenOrientation="portrait">
        </activity>


    </application>

</manifest>